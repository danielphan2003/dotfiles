#!/bin/sh

rofi -no-lazy-grab -show drun \
-display-drun "Applications :" -drun-display-format "{name}" \
-hide-scrollbar true \
-bw 0 \
-lines 11 \
-line-padding 8 \
-padding 20 \
-width 30 \
-xoffset 10 -yoffset 660 \
-location 1 \
-columns 2 \
-show-icons -icon-theme "McMojave-circle-dark" \
-font "Iosevka Nerd Font 14"

